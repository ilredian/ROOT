<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="DAO.VisitDAO">
    <insert id="setVisitTotalCount">
INSERT INTO VISIT (V_DATE) VALUES (sysdate())
</insert>

<select id="getVisitTotalCount">
select count(*) from visit
</select>

<select id="getVisitTodayCount">
select count(*) from visit  
where substr(DATE_FORMAT(v_date), 1, 9) = to_date(sysdate(), '%y/%M/%d')
</select>


</mapper>